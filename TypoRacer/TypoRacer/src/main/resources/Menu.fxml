<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<BorderPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.controller.NavigationController"
            styleClass="root">
    <stylesheets>
        <URL value="@css/style.css"/>
    </stylesheets>

    <center>
        <StackPane fx:id="contentPane" prefHeight="400.0" prefWidth="516.0"/>
    </center>

    <right>
        <VBox alignment="TOP_RIGHT" spacing="5" BorderPane.alignment="TOP_RIGHT" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <children>
                <Label fx:id="welcomeLabel" text="HEY" styleClass="app-title"/>
                <Label fx:id="Username" text="NomUtilisateur" styleClass="menu-username"/>
            </children>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>
            <children>
                <Button fx:id="btnMode" onAction="#loadModeView" text="Mode" styleClass="mode-button"/>
                <Button fx:id="btnAccueil" onAction="#loadAccueilView" text="Accueil" styleClass="mode-button"/>
                <Button fx:id="btnClassement" onAction="#loadClassementView" text="Classement" styleClass="mode-button"/>
                <Button fx:id="btnImage" onAction="#loadOcrView" text="Image" styleClass="mode-button"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>