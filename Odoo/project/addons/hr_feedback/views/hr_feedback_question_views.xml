<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hr_feedback_question_tree" model="ir.ui.view">
        <field name="name">hr.feedback.question.tree</field>
        <field name="model">hr.feedback.question</field>
        <field name="arch" type="xml">
            <list>
                <field name="label"/>
                <field name="score"/>
                <field name="feedback_id"/>
                <field name="skill_id"/>
            </list>
        </field>
    </record>

    <record id="view_hr_feedback_question_form" model="ir.ui.view">
        <field name="name">hr.feedback.question.form</field>
        <field name="model">hr.feedback.question</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="label"/>
                        <field name="answer"/>
                        <field name="score"/>
                        <field name="skill_id"/>
                        <field name="feedback_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>