<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    
    <record id="action_hr_feedback_question" model="ir.actions.act_window">
        <field name="name">Questions</field>
        <field name="res_model">hr.feedback.question</field>
        <field name="view_mode">list,form</field>
    </record>


    <record id="action_hr_feedback" model="ir.actions.act_window">
        <field name="name">Feedbacks</field>
        <field name="res_model">hr.feedback</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_hr_feedback_from_applicant" model="ir.actions.act_window">
        <field name="name">Feedbacks</field>
        <field name="res_model">hr.feedback</field>
        <field name="view_mode">list,form</field>
        <!-- Filtre automatique sur la candidature active -->
        <field name="domain">[('application_id', '=', active_id)]</field>
        <field name="context">{'default_application_id': active_id}</field>
    </record>


</odoo>
