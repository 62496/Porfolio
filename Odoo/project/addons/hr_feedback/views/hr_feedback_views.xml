<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST VIEW -->
    <record id="view_hr_feedback_tree" model="ir.ui.view">
        <field name="name">hr.feedback.tree</field>
        <field name="model">hr.feedback</field>
        <field name="arch" type="xml">
            <list>
                <field name="author_id"/>
                <field name="application_id"/>
                <field name="state"/>
                <field name="questions_count"/>
                <field name="average_score"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_hr_feedback_form" model="ir.ui.view">
        <field name="name">hr.feedback.form</field>
        <field name="model">hr.feedback</field> 
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>

                    <button
                        name="action_done"
                        string="Mark as Done"
                        type="object"
                        class="btn-primary"
                        invisible="state == 'done'"
                    />

                    <button
                        name="action_draft"
                        string="Reset to Draft"
                        type="object"
                        invisible="state == 'draft'"
                    />
                </header>

                <sheet>
                    <group>
                        <field name="author_id"/>
                        <field name="application_id"/>
                    </group>

                    <group>
                        <field name="description"/>
                    </group>

                    <group>
                        <field name="average_score" readonly="1"/>
                        <field name="questions_count" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Questions">
                            <field name="questions_ids">
                                <list editable="bottom">
                                    <field name="label"/>
                                    <field name="answer"/>
                                    <field name="score"/>
                                    <field name="skill_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook> 
                </sheet>
            </form>
        </field>
    </record>

</odoo>
